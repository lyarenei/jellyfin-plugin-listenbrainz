{
  "private": true,
  "scripts": {
    "typecheck": "tsc --noEmit",
    "bundle": "node esbuild.config.mjs",
    "build": "npm run typecheck && npm run bundle",
    "lint": "eslint .",
    "lint:fix": "eslint . --fix",
    "format": "prettier --write \"src/**/*.ts\" \"types/**/*.d.ts\" \"*.mjs\"",
    "format:check": "prettier --check \"src/**/*.ts\" \"types/**/*.d.ts\" \"*.mjs\""
  },
  "devDependencies": {
    "esbuild": "~0.25.0",
    "eslint": "~9.20.0",
    "eslint-config-prettier": "~10.0.0",
    "prettier": "~3.5.0",
    "typescript": "~5.7.0",
    "typescript-eslint": "~8.24.0"
  }
}
